<Page x:Class="ComputerWpf.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerWpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock  Text="Felhasználónév:" Background="#2D89EF" Foreground="White" FontSize="18" FontWeight="Bold"  Width="200"/>
            <TextBox Name="usernameTextBox" Margin="4" Width="200" />
            <TextBlock Text="Jelszó:" Background="#2D89EF" Foreground="White" FontSize="18" FontWeight="Bold" Margin="4"  Width="200"/>
            <PasswordBox Name="passwordBox" Width="200" />
            <TextBlock x:Name="registerLink" Foreground="#2D89EF" FontWeight="Bold" Margin="4" Width="200" >
                 <Hyperlink Click="Hyperlink_Click">Regisztráció</Hyperlink>
            </TextBlock>
            <Button x:Name="loginButton1" Click="loginButton1_Click" Content="Bejelentkezés" Foreground="White" Background="#0078D7" 
                     BorderBrush="#005A9E" Margin="10" Padding="10" FontSize="14"
                     Width="140" Height="40" />
        </StackPanel>
    </Grid>
</Page>
